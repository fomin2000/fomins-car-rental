<div class="container-fluid">
    <h1 id="headH1">Luxury Motor Rentals</h1>
    <div id="homepageForms">
        <div id="rentalsForm">
            <h2 id="formTitle">Search Car Rentals</h2>
            <h6>- Best motor rentals in Los Angeles, CA.</h6>
            <br>
            <div id="selectCar">
                <h4><strong>Select Car Type</strong></h4>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1" value="classic">Classic
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" value="sport">Sports
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2"  value="luxury">Luxury
                </div>
            </div>
            <br>
            <div id="selectDate">
                <div class="input-group flex-nowrap">
                    <span class="input-group-text" id="addon-wrapping">Pickup Date:</span>
                    <input type="text" class="form-control" placeholder="Ex: 01/02/2023" aria-label="Username" aria-describedby="addon-wrapping" id="pickupDate">
                </div>
                <div class="input-group flex-nowrap">
                    <span class="input-group-text" id="addon-wrapping">Dropoff Date:</span>
                    <input type="text" class="form-control" placeholder="Ex: 01/02/2023" aria-label="Username" aria-describedby="addon-wrapping" id="dropoffDate">
                </div>
            </div>
            <br>
            <button type="button" class="btn btn-success" id="checkAvailBtn">Check Availability</button>

        </div>
        <div id="detailsForm">
            <h3>Why rent at Luxury Motor Rentals?</h3>
            <br>
            <p>{{ green_check }}    Best Prices!</p>
            <p>{{ green_check }}    Unlimited Miles</p>
            <p>{{ green_check }}    No speed governors or limiters.</p>
            <p>{{ green_check }}    25% off for returning customers</p>
        </div>
    </div>
</div>
<script src="./js/booking.js"></script>